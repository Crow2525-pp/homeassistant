# Example secrets file for Home Assistant
# Copy this to secrets.yaml and fill in your actual values
# NEVER commit secrets.yaml to git!

# Network Configuration
wifi_ssid: "YourNetworkName"
wifi_password: "your_wifi_password"

# Home Assistant URLs
http_base_url: "https://your-domain.com"
internal_url: "http://homeassistant.local:8123"
external_url: "https://your-domain.com"

# Geographic Location
home_latitude: "0.000000"
home_longitude: "0.000000"
home_elevation: "0"

# API Keys & Tokens
weather_api_key: "your_weather_api_key"
spotify_client_id: "your_spotify_client_id"
spotify_client_secret: "your_spotify_client_secret"

# Mobile App Notifications
mobile_app_phil: "mobile_app_device_name_phil"
mobile_app_steph: "mobile_app_device_name_steph"

# MQTT
mqtt_broker: "core-mosquitto.local.hass.io"
mqtt_port: 1883
mqtt_username: "your_mqtt_username"
mqtt_password: "your_mqtt_password"

# Database (if using external)
db_url: "postgresql://user:password@localhost/homeassistant"

# Integrations
# Google Assistant / Cloud Integration
google_project_id: "your_project_id"
google_client_id: "your_client_id.apps.googleusercontent.com"
google_client_secret: "your_client_secret"

# Device IDs (optional but recommended)
# broadlink_device_1: "device_id_here"
# broadlink_device_2: "device_id_here"

# Solar/Energy (if applicable)
# gosungrow_username: "your_username"
# gosungrow_password: "your_password"

# ESPHome Devices
esphome_masterbedroom_api_key: "your_api_encryption_key_here"
esphome_masterbedroom_ota_password: "your_ota_password"
esphome_masterbedroom_fallback_password: "your_fallback_password"

esphome_livingroom_api_key: "your_api_encryption_key_here"

esphome_web_27d9d4_api_key: "your_api_encryption_key_here"

esphome_web_f57460_api_key: "your_api_encryption_key_here"
esphome_web_f57460_fallback_password: "your_fallback_password"

# Xiaomi BLE Device Bindkeys
xiaomi_ble_bindkey_1: "your_ble_bindkey_32_chars_hex"
xiaomi_ble_bindkey_2: "your_ble_bindkey_32_chars_hex"

# Network Services
server_ip: "192.168.1.xxx"
camera_ip: "192.168.1.xxx"
camera_url_base: "http://192.168.1.xxx:81"
wiim_amp_ip: "192.168.1.xxx"

# Reolink Cameras
reolink_driveway_ip: "192.168.1.xxx"
reolink_driveway_username: "your_reolink_username"
reolink_driveway_password: "your_reolink_password"
reolink_front_door_ip: "192.168.1.xxx"
reolink_front_door_username: "your_reolink_username"
reolink_front_door_password: "your_reolink_password"

# Add any other secrets your configuration needs
