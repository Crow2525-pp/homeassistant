---
# yamllint configuration for Home Assistant
extends: default

# Ignore certain paths
ignore: |
  .git/
  .storage/
  deps/
  www/
  custom_components/*/
  config/deps/
  __pycache__/
  *.backup
  *_backup/
  .vscode/
  .idea/

rules:
  # Line length - Allow longer lines for Home Assistant configs
  line-length:
    max: 200
    level: warning
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true

  # Indentation - disable for now (many legacy files use mixed spacing)
  indentation: disable

  # Comments
  comments:
    min-spaces-from-content: 1
    require-starting-space: true
    ignore-shebangs: true

  # Truthy values - Allow yes/no/on/off (common in HA)
  truthy:
    allowed-values: ['true', 'false', 'yes', 'no', 'on', 'off']
    check-keys: false

  # Document start - allow either presence or absence of '---'
  document-start: disable

  # Empty values - Allow null values
  empty-values:
    forbid-in-block-mappings: false
    forbid-in-flow-mappings: false

  # Brackets - Allow flexibility
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Braces - Allow flexibility
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
    min-spaces-inside-empty: 0
    max-spaces-inside-empty: 0

  # Colons
  colons:
    max-spaces-before: 0
    max-spaces-after: 1

  # Commas
  commas:
    max-spaces-before: 0
    min-spaces-after: 1
    max-spaces-after: 1

  # Hyphens
  hyphens:
    max-spaces-after: 1

  # Key duplicates - Warn about duplicate keys
  key-duplicates: enable

  # Trailing spaces - relax enforcement while normalising files
  trailing-spaces: disable

  # New lines - accept any platform newlines and ignore final newline check
  new-line-at-end-of-file: disable
  new-lines:
    type: any

  # Quoted strings - Allow both single and double quotes
  quoted-strings:
    quote-type: any
    required: false

  # Octal values - Warn about octal values
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
